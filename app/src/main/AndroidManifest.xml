<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pasrahsaja.projectcapstonefakenews">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_news_white"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_news_white"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjectCapstoneFakeNews">
        <activity android:name=".ui.home.HomeActivity" />
        <activity android:name=".ui.splashscreen.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>